generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worker {
  id       String     @id @unique @default(uuid())
  name     String
  phone    String     @unique
  address  String?
  Assembly Assembly[]
}

model Assembly {
  id             String        @id @unique @default(uuid())
  worker_id      Worker        @relation(fields: [workerId], references: [id])
  date_assigned  DateTime      @updatedAt
  date_completed DateTime?     @updatedAt
  completed      Boolean?
  raw_material   RawMaterial[]
  workerId       String
}

model RawMaterial {
  id         String    @id @unique @default(uuid())
  name       String
  type       String
  quantity   Int
  date_added DateTime  @default(now())
  Assembly   Assembly? @relation(fields: [assemblyId], references: [id])
  assemblyId String?
}